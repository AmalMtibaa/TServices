@model PuProject.Models.CatFour3


@{
    ViewBag.Title = "Create";
}
<head>
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/Content/css/styleFormulaire.css")>
</head>
<style>
    .a {
        width: 1025px;
        margin: 0 auto;
    }

    body {
        background-color: white;
    }

    .form-control, input {
        color: #e0e0eb;
    }
    label{
        color:white;
    }
    input[type=text], input[type=number], .form-control, option {
        width: 100%;
        padding: 8px 5px;
        background: linear-gradient(#1f2124, #27292c);
        border: 1px solid #222;
        box-shadow: 0 1px 0 rgba(255,255,255,0.1);
        border-radius: 0.3em;
        margin-bottom: 20px;
       
    }
   

</style>
@{
    List<SelectListItem> listItems = new List<SelectListItem>();
    foreach (var item in Model.cat2)
    {
        listItems.Add(new SelectListItem
        {
            Text = item.Nom,
            Value = item.Nom
        });
    }

    List<SelectListItem> listItems1 = new List<SelectListItem>();
    foreach (var item in Model.Gouvernerat)
    {
        listItems1.Add(new SelectListItem
        {
            Text = item.Nom,
            Value = item.Nom
        });
    }

    List<SelectListItem> listItems2 = new List<SelectListItem>();
    foreach (var item in Model.Ville)
    {
        listItems2.Add(new SelectListItem
        {

            Text = item.Nom,
            Value = item.Nom
            
        });
    }
}
<div class="a">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h1 id="what">Demande Publication</h1>
        <div class="inset">
            <p>
                <label for="email">Description Demande</label>
                <input type="text" name="Description" />
            </p>
            <p>
                <label for="email">Debut Bugdet</label>
                <input type="number" name="DebutBudget" />
            </p>
            <p>
                <label for="email">Fin Bugdet</label>
                <input type="number" name="FinDebut" />
            </p>


            <p>
                <label for="email">Categorie</label>
                @Html.DropDownList("Categorie", listItems, new { @class = "form-control" })
            </p>
            <p>
                <label for="email">Gouvernorat</label>
                <div id="select">
                    @Html.DropDownList("Gouvernorat", listItems1, new { @class = "form-control" })
                </div>
            </p>
            <p>
                <label for="email">Ville</label>
                @Html.DropDownList("Ville", listItems2, new { @class = "form-control" })
            </p>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Publier" class="btn btn-default" />
                </div>
            </div>
        </div>

    }
</div>
<script>
    $(document).ready(function () {
        // Handler for .ready() called.
        $('html, body').animate({
            scrollTop: $('#what').offset().top
        }, 'slow');
    });
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
